- @chats.each do |chat|
  .talk_info{data: {chat: {id: chat.id}}}
    .name
      = chat.user.name
      = chat.created_at.strftime("%Y-%m-%d %H:%M")
      - if user_signed_in? && chat.user_id == current_user.id
        = link_to room_chat_path(chat.room_id, chat.id), method: :delete,html: {class: "delete"}, remote: true, data: { confirm: '削除してよろしいですか？' } do
          %input{type: "submit", value: "削除"}
    .chat_comment
      = chat.comment
      
    