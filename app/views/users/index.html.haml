.wrapper
  .header
    .picture
      = image_tag src="/assets/header.jpg", size: ""
  .main
    
    .menu_list
      .icon_btn
        = icon('fas', 'angle-double-down')
        = link_to rooms_path, class: "hidden" do
          = icon('fas', 'comment')
        = link_to edit_user_path(current_user), class: "hidden" do
          = icon('fas', 'address-book')
            
      .user_list
        .name
          - @user.each do |user|
            - if current_user.name != user.name
              = link_to user_path(user) do
                = user.name
              .user_picture
                = image_tag user.image.url
              .comment
                = user.comment