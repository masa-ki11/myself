.wrapper
  .header
    .picture
      = image_tag src="/assets/header.jpg", size: ""
  .main
    
    .menu_list
      .icon_btn
        = icon('fas', 'angle-double-down')
        = link_to "", class: "hidden" do
          = icon('fas', 'comment')
        = link_to edit_user_path(current_user), class: "hidden" do
          = icon('fas', 'address-book')
            
      .user_list
        .name
          - @user.each do |user|
            = link_to user.name, user
            .user_picture
              = image_tag user.image.url
            .comment
              = user.comment